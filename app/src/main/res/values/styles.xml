<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_rounded_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_rounded_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_rounded_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_rounded_small</item>
        <item name="boxStrokeColor">#E2E3E4</item>
        <item name="boxStrokeWidth">0.5dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">@dimen/radius_rounded_small</item>
        <item name="elevation">0.5dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/radius_rounded_small</item>
    </style>

    <style name="ShapeAppearance.Image.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>